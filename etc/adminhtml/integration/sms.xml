<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="sns" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
        <label>SNS</label>
        <field id="enabled" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable</label>
            <config_path>sendsms/sns/enabled</config_path>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="sid" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enter SNS ID</label>
            <comment>Enter your SNS Account ID</comment>
            <tooltip>Your ID must be the same as your sns account id</tooltip>
            <validate>required-entry</validate>
            <config_path>sendsms/sns/sid</config_path>
            <depends>
                <field id="enabled">1</field>
            </depends>
        </field>
        <field id="token" translate="label" type="password" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enter SNS Auth Token</label>
            <comment>Enter your SNS Auth Token</comment>
            <tooltip>Your token must be the same as your sns auth token</tooltip>
            <validate>required-entry</validate>
            <config_path>sendsms/sns/token</config_path>
            <depends>
                <field id="enabled">1</field>
            </depends>
        </field>
        <field id="from" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enter SNS Phone Number</label>
            <comment>Enter your SNS Phone Number</comment>
            <tooltip>Your number must be the same as your sns phone number</tooltip>
            <validate>required-entry</validate>
            <config_path>sendsms/sns/from</config_path>
            <depends>
                <field id="enabled">1</field>
            </depends>
        </field>
        <field id="sender" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Sender</label>
            <config_path>sendsms/sns/sender</config_path>
            <depends>
                <field id="enabled">1</field>
            </depends>
        </field>
        <field id="number" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Number Test</label>
            <config_path>sendsms/sns/number</config_path>
            <comment>Please enter telephone number test connect SNS Integration !</comment>
            <depends>
                <field id="enabled">1</field>
            </depends>
        </field>
        <field id="button" translate="button_label" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
            <button_label>Check Connect SNS</button_label>
            <frontend_model>CHK\AmazonSNS\Block\Adminhtml\System\Config\SNSSms</frontend_model>
            <depends>
                <field id="enabled">1</field>
            </depends>
            <attribute type="button_url">sendsms/check/sns</attribute>
            <comment>Click this button Check Connect SNS</comment>
        </field>
    </group>

</include>
